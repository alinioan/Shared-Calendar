{
  "realm": "calendar-realm",
  "enabled": true,
  "sslRequired": "external",
  "registrationAllowed": false,
  "loginWithEmailAllowed": true,
  "duplicateEmailsAllowed": false,
  "resetPasswordAllowed": true,
  "editUsernameAllowed": false,
  "bruteForceProtected": true,
  
  "roles": {
    "realm": [
      {
        "name": "participant",
        "description": "Can access group calendar and set availability"
      },
      {
        "name": "organizer",
        "description": "Can plan events and manage group members"
      },
      {
        "name": "admin",
        "description": "Full administrative access"
      }
    ]
  },
  
  "clients": [
    {
      "clientId": "calendar-client",
      "name": "Calendar Platform Service",
      "description": "Backend service for calendar platform",
      "enabled": true,
      "publicClient": true,
      "redirectUris": [
        "http://localhost:5000/*",
        "http://profile-service:5000/*"
      ],
      "webOrigins": [
        "http://localhost:5000",
        "http://localhost:3000"
      ],
      "protocol": "openid-connect",
      "standardFlowEnabled": true,
      "implicitFlowEnabled": false,
      "directAccessGrantsEnabled": true
    }
  ],
  
  "defaultRoles": ["participant"]
}
